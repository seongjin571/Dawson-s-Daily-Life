  display: -moz-box;
  color: #ffffff;
  -webkit-box-orient: horizontal;
  -moz-box-orient: horizontal;
}
#jewel
{
  padding-top: 4px;
  width: 15%;
  height: 15%;
}
#wrapper
{
  margin : 0 auto;
}
#fail{
  background: url('/images/stage1Fail.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  opacity: 0.9;
}
#success{
  background: url('/images/stage1_1.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  opacity: 0.9;
}
#success2{
  background: url('/images/stage1_2.png');
